<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="400dp">
    <ImageView
        android:id="@+id/cart_iv"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/setting_network"
        />
    <TextView
        android:id="@+id/cart_tv1"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="24sp"
        android:text="sssssssssssssssssssssssssssssssssss"
        android:layout_toRightOf="@+id/cart_iv"
        />
    <TextView
        android:id="@+id/cart_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="169.00"
        android:textColor="#f00"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cart_iv"
        android:layout_below="@+id/cart_tv1"
        />
 <TextView
     android:id="@+id/cart_tv3_color"
     android:layout_below="@+id/cart_iv"
     android:text="颜色"
     android:layout_marginLeft="10dp"
     android:layout_width="wrap_content"
     android:gravity="center"
     android:layout_height="60dp"
     />
    <RadioGroup
        android:id="@+id/color_group"
        android:padding="10dp"
        android:layout_below="@+id/cart_tv2"
        android:layout_toRightOf="@+id/cart_tv3_color"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RadioButton
            android:background="@drawable/add_cart_color_diaglog"
            android:gravity="center"
            android:button="@null"
            android:id="@+id/rb1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:text="白色"
            android:layout_height="match_parent" />

        <RadioButton
            android:background="@drawable/add_cart_color_diaglog"
            android:gravity="center"
            android:button="@null"
            android:id="@+id/rb2"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="蓝色"
            android:layout_height="match_parent" />
        <RadioButton
            android:background="@drawable/add_cart_color_diaglog"
            android:gravity="center"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:id="@+id/rb3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="彩色"
            android:layout_height="match_parent" />
    </RadioGroup>
    <LinearLayout
        android:id="@+id/chimagroup"
        android:layout_below="@+id/color_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/cart_tv4_chima"
            android:text="尺码"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="60dp"
            />
        <RadioGroup
            android:id="@+id/chima_group"
            android:padding="10dp"
            android:layout_below="@+id/cart_tv2"
            android:layout_toRightOf="@+id/cart_tv3_color"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RadioButton
                android:background="@drawable/add_cart_color_diaglog"
                android:gravity="center"
                android:button="@null"
                android:id="@+id/rb1_chima"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:text="F"
                android:layout_height="match_parent" />
            <RadioButton
                android:background="@drawable/add_cart_color_diaglog"
                android:gravity="center"
                android:button="@null"
                android:id="@+id/rb2_chima"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="M"
                android:layout_height="match_parent" />
            <RadioButton
                android:background="@drawable/add_cart_color_diaglog"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="10dp"
                android:id="@+id/rb3_chima"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="X"
                android:layout_height="match_parent" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/addorjian"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/chimagroup"
        >
        <TextView
            android:id="@+id/cart_tv5_shuliang"
            android:text="数量"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="60dp"
            />
       <ImageButton
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginLeft="10dp"
           android:layout_gravity="center_vertical"
           android:background="@drawable/add_cart_color_diaglog_shuliang"
           android:src="@mipmap/shopping_select_number_minus_btn_default"
           />
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/add_cart_color_diaglog_shuliang"
           android:text="10"
            android:textSize="20sp"
            android:gravity="center"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/add_cart_color_diaglog_shuliang"
            android:src="@mipmap/shopping_select_number_add_btn_default"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="剩余20件"
            android:id="@+id/shengyu" />
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@+id/addorjian"
        android:layout_width="120dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:background="@drawable/select_addcart"
        android:text="确定"
        android:id="@+id/queding" />

</RelativeLayout>