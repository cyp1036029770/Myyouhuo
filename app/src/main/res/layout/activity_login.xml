<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:context="com.example.chenyunpeng.youhuo.activity.LoginActivity">
<RelativeLayout
    android:id="@+id/logingroup"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="账号"
        android:id="@+id/account"
        android:layout_marginBottom="20dp"
        />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="密码"
        android:id="@+id/pasword"
        android:layout_below="@+id/account"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"

        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pasword"
        />
</RelativeLayout>
    <Button
        android:id="@+id/qqlogin"
        android:layout_below="@+id/logingroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qq登陆"
        />
    <Button
    android:id="@+id/sina_login"
        android:layout_below="@+id/qqlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sina"
        />
</RelativeLayout>
