<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#aaa"
        android:id="@+id/head_v1"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#000"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/tabbar_mine_normal"
            />
        <TextView
            android:layout_below="@+id/head_image"
            android:id="@+id/title_head"
            android:layout_marginTop="10dp"
            android:text="未登录"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:background="#000"
        android:layout_below="@+id/head_v1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="收藏商品"
            />
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="收藏商品"
            />
        <TextView
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="收藏商品"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_back_press"
            />
        <ViewFlipper
            android:layout_toRightOf="@+id/iv"
            android:id="@+id/vf_head"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
                android:id="@+id/tv1"
                android:text="关于防范网络电话诈骗的温馨提示"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="由于G20召开而导致的物流延迟为题的说明"
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </ViewFlipper>
    </RelativeLayout>

</LinearLayout>